@page
@model RPDemoApp.Pages.Orders.CreateModel
@{
}

<h1>Order Creation Page</h1>
<form method="post">
    @*Reserve an area at the top of page to display issues pertainin to the Model as a whole, instead of the individual fields*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Order.FoodId" class="control-label"></label>                                   @*Label with text to represent food ID field*@
        <select asp-for="Order.FoodId" asp-items="Model.FoodItems" class="form-control"></select>       @*Creates select field to gather the Food ID value & Display Title*@
        <span asp-validation-for="Order.FoodId" class="text-danger"></span>                            @*Validation text to display if there are errors in this field*@
    </div>

    <div class="form-group">
        <label asp-for="Order.Quantity" class="control-label"></label>          @*Label with text to represent Quantity field*@
        <input asp-for="Order.Quantity" class="form-control" />                 @*Creates input field to gather the Quantity value*@
        <span asp-validation-for="Order.Quantity" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="Order.OrderName" class="control-label"></label>         @*Label with text to represent Order Name field*@
        <input asp-for="Order.OrderName" class="form-control" />                @*Creates input field to gather the Order Name value*@
        <span asp-validation-for="Order.OrderName" class="text-danger"></span>  @*Validation text to display if there are errors in this field*@
    </div>

    <div class="form-group">
        <input type="submit" value="Order Food" class="btn btn-primary" />
    </div>

</form>